// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id          String  @id
    email       String  @unique
    point       Int     @default(0)
    box         Box[]
    cart        Cart[]
}

model Box {
    id      Int     @default(autoincrement()) @id
    title   String
    price   Int
    owner   User    @relation(fields: [ownerId], references: [id])
    ownerId String
    boxItem BoxItem[]
}

model Item {
    id      Int     @default(autoincrement()) @id
    title   String
    price   Int
    image   String
    detail  String
    boxItem BoxItem[]
}

model Cart {
    id      Int     @default(autoincrement()) @id
    box_id  Int
    user    User    @relation(fields: [userId], references: [id])
    userId  String
}

model BoxItem {
    id      Int     @default(autoincrement()) @id
    box     Box     @relation(fields: [boxId], references: [id])
    boxId   Int
    item    Item    @relation(fields: [itemId], references: [id])
    itemId  Int
}

model Purchars{
    id              Int         @default(autoincrement())   @id
    boxId           Int
    count           Int
    puarchaseAt     DateTime    @default(now())
    price           Int
    refund          Boolean
    refundAt        DateTime
}
